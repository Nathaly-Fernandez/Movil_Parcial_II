<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10sp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="51dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrate en Mi ESPE"
                android:textColor="#00C853"
                android:textSize="24sp" />

            <RadioGroup
                android:id="@+id/rgGenero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </RadioGroup>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/idRegistroCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/idRegistroNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre" />

        <EditText
            android:id="@+id/idRegistroContrase単a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contrase単a"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/idRegistroContrase単aRepetida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Repetir contrase単a"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/txtFechaDeNacimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:hint="Fecha de nacimiento"
            android:inputType="date" />

        <RadioButton
            android:id="@+id/rdHombre"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="0"
            android:checked="true"
            android:hint="Hombre"
            android:visibility="invisible" />

        <RadioButton
            android:id="@+id/rdMujer"
            android:layout_width="22dp"
            android:layout_height="1dp"
            android:layout_weight="0"
            android:hint="Mujer"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese foto de perfil" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fotoPerfil"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher" />

    </LinearLayout>

    <Button
        android:id="@+id/idRegistroRegistrar"
        style="@android:style/Widget.Material.Light.Button.Toggle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/ic_menu_save"
        android:hint="Guardar" />

</LinearLayout>